<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style type="com.pgu.translate.client.ui.TranslateUI.MyStyle">
        .progress0 {
            width: 0% !important;
        }
        .progress25 {
            width: 25% !important;
        }
        .progress50 {
            width: 50% !important;
        }
        .progress75 {
            width: 75% !important;
        }
        .progress100 {
            width: 100% !important;
        }
        .full_width {
            width: 100%;
        }
        .font_25 {
            font-size: 2.5em !important;
        }
        .space {
            margin-right: 5px !important;
            margin-top: auto !important;
            margin-bottom: auto !important;
            padding-left: 10px !important;
        }
        .inputWord {
            height: 48px !important;
            width: 97%;
            float: right;
        }
        .selectSource {
            width: 100px;
            height: 56px !important;
        }
        .toolbar {
            margin-bottom: 10px;
        }
        .float_right {
            float: right;
            margin-top: 10px;
        }
        .part {
            float: left;
            margin-top: 10px;
        }
        .enabled {
            display: inline;
        }
        .disabled {
            display: none;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.full_width}">
        <g:HTMLPanel addStyleNames="{style.toolbar}">
            <g:TextBox ui:field="inputWord" addStyleNames="{style.space} {style.font_25} {style.inputWord}">welcome</g:TextBox>
            <div class="{style.float_right}">
              <g:ListBox ui:field="source" addStyleNames=" {style.selectSource} {style.space} {style.font_25}"></g:ListBox>
              <g:Anchor ui:field="btnSend" href="javascript:void(0)" addStyleNames="btn btn-primary btn-large {style.font_25}">>></g:Anchor>
            </div>
        </g:HTMLPanel>
        <div ui:field="progressBarContainer" class="progress progress-success progress-striped active {style.full_width} {style.part} {style.disabled}">
          <div ui:field="progressBar" class="bar {style.progress0}"></div>
        </div>
        <g:HTMLPanel ui:field="resultsContainer" addStyleNames="{style.full_width} {style.part}">
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder> 